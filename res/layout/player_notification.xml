<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/widget_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/notify_icon"
            android:layout_width="72dip"
            android:layout_height="72dip"
            android:contentDescription="@string/description_icon"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notify_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:singleLine="true"
                android:text="@string/title" />

            <LinearLayout
                android:id="@+id/control_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dip"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/notify_previous"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/pause"
                    android:src="@drawable/ic_notifybck" />

                <ImageButton
                    android:id="@+id/notify_pause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/pause"
                    android:src="@drawable/ic_notifypause" />

                <ImageButton
                    android:id="@+id/notify_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/Next"
                    android:src="@drawable/ic_notifyfwd" />

                <ImageButton
                    android:id="@+id/notify_exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/close"
                    android:src="@drawable/ic_close" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>